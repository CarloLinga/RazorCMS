<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorCMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid mx-0 px-0">
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light bg-dark fixed-top">
            <a class="navbar-brand text-white-50" role="button" asp-area="" asp-page="/Index">&nbsp;&nbsp;RazorCMS&nbsp;&nbsp;</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link btn-link text-white-50" asp-area="" asp-page="/Companies/Index">
                            <i class="fas fa-city"></i>&nbsp;&nbsp;Companies
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-link text-white-50" asp-area="" asp-page="/Contacts/Index">
                            <i class="far fa-address-card"></i>&nbsp;&nbsp;Contacts
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div id="main-body" style="margin-top: 60px">
        <div class="container-fluid">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
